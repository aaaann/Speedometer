<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpeedometerStyle">
        <item name="speed">0</item>
        <item name="maxSpeed">160</item>
        <item name="lowSpeedColor">#00ff00</item>
        <item name="normalSpeedColor">#FFFD00</item>
        <item name="highSpeedColor">#ff0000</item>
        <item name="arrowColor">#000000</item>
    </style>

</resources>
